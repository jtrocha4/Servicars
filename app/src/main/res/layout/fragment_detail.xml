<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ccTrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        android:background="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/order_vista_detallada"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="4dp">

                        <TextView
                            android:id="@+id/vehiculoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/columna_vehiculo"
                            android:textAlignment="textStart"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vehiculoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="4dp">

                        <TextView
                            android:id="@+id/matriculaTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/columna_matricula"
                            android:textAlignment="textStart"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matriculaTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="4dp">

                        <TextView
                            android:id="@+id/clienteTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/columna_cliente"
                            android:textAlignment="textStart"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/clienteTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="4dp">

                        <TextView
                            android:id="@+id/fechaTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/columna_fecha"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fechaTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="4dp">

                        <TextView
                            android:id="@+id/estadoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/columna_estado"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/estadoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="4dp">

                        <TextView
                            android:id="@+id/fallaAutoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/columna_falla"
                            android:textAlignment="textStart"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fallaAutoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>