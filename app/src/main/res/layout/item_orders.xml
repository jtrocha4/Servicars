<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="320dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:visibility="visible"
            app:srcCompat="@drawable/outline_delete_24"></ImageButton>

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="320dp"
            android:layout_marginTop="100dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:visibility="visible"
            app:srcCompat="@drawable/outline_edit_24"></ImageButton>

        <TableLayout
            android:layout_width="327dp"
            android:layout_height="126dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/vehiculoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/columna_auto"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vehiculoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/matriculaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/columna_matricula"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/matriculaTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/clienteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/columna_cliente"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clienteTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fechaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/columna_fecha"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fechaTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/estadoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/columna_estado"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/estadoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />
            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>